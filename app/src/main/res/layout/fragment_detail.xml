<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none" >

    <LinearLayout android:layout_width="match_parent"
        android:layout_height="match_parent">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popularmovies.DetailActivityFragment">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bluegrey"/>
    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="300dp
        "

        android:scaleType="centerCrop"

        android:id="@+id/detail_movie_backdrop"
        android:src="@drawable/placeholder"
        />





    <TextView
        android:text="TITLE GOES HERE"
        android:id="@+id/detail_movie_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textSize="40dp"
        android:textColor="@color/orange"
        android:paddingTop="20dp"
        android:layout_below="@id/detail_movie_backdrop"/>

    <TextView
        android:id="@+id/detail_movie_release_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:paddingTop="2dp"
        android:fontFamily="sans-serif-light"
        android:textStyle="bold"
        android:text="Release Date: "
        android:textColor="@color/lt_grey"
        android:layout_below="@id/detail_movie_title"/>
    />

    <TextView
        android:text="RELEASE DATE GOES HERE"
        android:id="@+id/detail_movie_release"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/yellow"
        android:textSize="16dp"
        android:paddingTop="2dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/detail_movie_release_label"
        android:layout_below="@id/detail_movie_title"/>/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_movie_rating_label"
        android:fontFamily="sans-serif-light"
        android:textSize="16dp"
        android:text="User Rating: "
        android:textColor="@color/lt_grey"
        android:paddingTop="20dp"
        android:layout_below="@id/detail_movie_release"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_movie_rating"
        android:fontFamily="sans-serif-light"
        android:textSize="16dp"
        android:textColor="@color/yellow"
        android:text="USER RATING GOES HERE"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:layout_below="@id/detail_movie_release"
        android:layout_toRightOf="@id/detail_movie_rating_label"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_movie_description"
        android:fontFamily="sans-serif-light"
        android:textSize="16dp"
        android:textColor="@color/yellow"
        android:text="DESCRIPTION GOES HERE : THis is some placeholder text to illustrate the description text of the movie that is a few lines long ................................blah blah blahblah blah blahblah blah blahblah blah blahblah blah blah"
        android:paddingTop="20dp"
        android:layout_below="@id/detail_movie_rating"
        />

    <TextView
        android:text="ID"
        android:id="@+id/detail_movie_id_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="10dp"
        android:paddingTop="20dp"
        android:layout_below="@id/detail_movie_description"/>

    <TextView
        android:text="ID GOES HERE"
        android:id="@+id/detail_movie_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textSize="10dp"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:layout_toRightOf="@id/detail_movie_id_label"
        android:layout_below="@id/detail_movie_description"/>






</RelativeLayout>
</LinearLayout>
</ScrollView>